<div class="jumbotron">
  <h1><%= @subject.name.upcase %></h1>
  <h2>HAS A WIKIPEDIA PAGE</h2>
  <h3><%= link_to "Help make it better!", @subject.wiki_page_link, target: "_blank" %></h3>
</div>

<div class="row top-pad">
  <div class="col-md-5">
    <div class="panel">
      <h3><%= @subject.bio %></h3>
    </div>
  </div>
  <div class="col-md-7">
    <div class="panel">
      <div class="panel-body">
        <h2>Here's what people are saying about her on Twitter:</h2>
        <div class="col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1">
          <%= render 'subjects/tweet', subject: @subject %>
        </div>
      </div>
    </div>
  </div>
</div>
