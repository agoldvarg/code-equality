<h3>Welcome, <%= current_user.name %></h3>
<h4>You are a badass administrator.</h4>
<p><%= link_to 'Users:', users_path %> <%= User.count %> registered</p>

<div class="container">
  <div class="row">
    <h3>Users</h3>
    <div class="column">
      <table class="table">
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <%= render user %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>